// Eric Buxton och Maja Nyberg

function cone(n, rune){
    
    return scale_overlay(n, rune, 1);
    
}

function scale_overlay(n, rune, scale_nr){
    
    return scale_nr === n
    ? rune
    : overlay_frac(scale_nr/n, scale(scale_nr/n, rune), scale_overlay(n, rune, scale_nr+1));
   
}
// Tests
show(cone(4, circle));
//hollusion(cone(4, circle));
