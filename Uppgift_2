// Eric Buxton och Maja Nyberg

function cone(n, rune){
    
    return iter(n, rune, 1);
    
}

function iter(n, rune, counter){
    
    return counter === n
    ? rune
    : overlay_frac(counter/n, scale(counter/n, rune), iter(n, rune, counter+1) );
}

// Tests
show(cone(4, circle));
//hollusion(cone(4, circle));
